<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="12dp">

        <ImageView
            android:id="@+id/class_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_4" />

        <RelativeLayout
            android:id="@+id/class_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/class_logo"
            android:padding="10dp"
            android:layout_marginStart="12dp">

            <TextView
                android:id="@+id/class_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sora"
                android:text="TextView"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/class_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/class_tv1"
                android:fontFamily="@font/sora"
                android:text="TextView123123" />

            <TextView
                android:id="@+id/class_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/class_tv2"
                android:fontFamily="@font/sora"
                android:text="TextView123123" />

            <TextView
                android:id="@+id/class_tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/class_tv3"
                android:fontFamily="@font/sora"
                android:text="TextView123123" />

            <TextView
                android:id="@+id/class_tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/class_tv4"
                android:fontFamily="@font/sora"
                android:text="TextView123123" />
        </RelativeLayout>
    </RelativeLayout>



</androidx.cardview.widget.CardView>